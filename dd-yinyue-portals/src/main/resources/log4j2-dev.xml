<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout charset="UTF-8" pattern="[%-5p] %d %c userId:[%X{userId}] - %m%n" />
			<Filters>
	        	<ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="NATURE"/>
      		</Filters>
		</Console>
		
		<File name="FileInfo" fileName="d:/dd-yinyue-log/info/portals.log" append="false">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} %-5level %class{36} %L %M  userId:[%X{userId}] - %msg%xEx%n" />
			<Filters>
	        	<!-- 只记录info级别信息 -->
	        	<ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
      		</Filters>
			<SizeBasedTriggeringPolicy size="5MB" />
		</File>
		
		<File name="FileDebug" fileName="d:/dd-yinyue-log/debug/portals.log" append="false">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} %-5level %class{36} %L %M  userId:[%X{userId}] - %msg%xEx%n" />
			<Filters>
	        	<!-- 只记录Debug级别信息 -->
	        	<ThresholdFilter level="debug" onMatch="ACCEPT" onMismatch="DENY"/>
      		</Filters>
			<SizeBasedTriggeringPolicy size="5MB" />
		</File>
		
		<RollingFile name="RollingFile" fileName="d:/dd-yinyue-log/logs/portals.log"
			filePattern="d:/dd-yinyue-log/$${date:yyyy-MM}/classroom-%d{MM-dd-yyyy}-%i.log.gz">
			<PatternLayout
				pattern="%d{yyyy-MM-dd 'at' HH:mm:ss z} %-5level %class{36} %L %M userId:[%X{userId}] - %msg%xEx%n" />
			<SizeBasedTriggeringPolicy size="50MB" />
		</RollingFile>
	</Appenders>
	<Loggers>
        <root level="DEBUG">
			<AppenderRef ref="Console" />
			<AppenderRef ref="FileInfo" />
			<AppenderRef ref="FileDebug" />
			<AppenderRef ref="RollingFile" />
		</root>
	</Loggers>
</configuration>